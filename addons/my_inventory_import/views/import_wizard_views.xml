<odoo>
  <record id="view_import_inventory_wizard" model="ir.ui.view">
    <field name="name">import.inventory.wizard.form</field>
    <field name="model">import.inventory.wizard</field>
    <field name="arch" type="xml">
      <form string="Import Inventory">
        <sheet>
          <group>
            <field name="api_url"/>
            <field name="api_token"/>
            <field name="external_id"/>
          </group>
          <footer>
            <button string="Import" type="object" name="action_import" class="btn-primary"/>
            <button string="Cancel" class="btn-default" special="cancel"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_open_import_wizard" model="ir.actions.act_window">
    <field name="name">Import From API</field>
    <field name="res_model">import.inventory.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <menuitem id="menu_import_wizard" name="Import From API" parent="menu_my_import_root" action="action_open_import_wizard"/>
</odoo>